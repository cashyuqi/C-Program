{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug(gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/tmp/buildtempc",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",    // 定位到当前目录
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build(gcc)",
        }
    ]
}